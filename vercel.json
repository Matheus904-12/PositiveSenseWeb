{
    "version": 2,
    "builds": [
        {
            "src": "*.php",
            "use": "vercel-php@0.7.1"
        }
    ],
    "routes": [
        {
            "src": "/(css|js|img|uploads)/(.*)",
            "dest": "/$1/$2"
        },
        {
            "src": "/(.*\\.php)",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.php"
        }
    ],
    "env": {
        "PHP_VERSION": "8.2"
    }
}
